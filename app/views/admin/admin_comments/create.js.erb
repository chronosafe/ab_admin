<% if resource.persisted? %>
  $context = $('#<%= dom_id(resource.resource, 'list_admin_comments') %>').or('body');
  $('#admin_comments', $context).append('<%= j render('comment', comment: resource) %>');
  $('#new_admin_comment', $context).replaceWith('<%= j render('form', commentable: resource.resource) %>');
<% end %>